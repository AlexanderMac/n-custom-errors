{
    "extends": "../.jshintrc",

    // Enforcing
    "maxstatements" : false,    // {int} Max number statements per function
    "maxlen"        : 150,      // {int} Max number of characters per line

    // Relaxing
    "expr"          : true,     // true: Tolerate `ExpressionStatement` as Programs

    // Custom Globals
    "globals": {
        "Promise"   : true,
        "describe"  : true,
        "it"        : true,
        "before"    : true,
        "beforeEach": true,
        "after"     : true,
        "afterEach" : true,
        "inject"    : true,
        "expect"    : true
    }
}
